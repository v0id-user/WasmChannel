		"better-auth": "^1.2.9",
		"dotenv": "^16.5.0",
		"drizzle-orm": "^0.43.1",
		"hono": "^4.7.11",
		"kysely-d1": "^0.4.0",
		"nanoid": "^5.1.5",
		"wrangler": "^4.20.0"
	},
