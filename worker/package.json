	"type": "module",
	"exports": {
		"./*": "./dist/*"
	},
	"types": "./dist/src/routers/index.d.ts",
	"scripts": {
		"dev": "wrangler dev",
		"types:build": "tsc -p tsconfig.json --emitDeclarationOnly",
		"bdg": "bunx drizzle-kit generate",
